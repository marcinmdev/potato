{% extends 'base.html.twig' %}

{% block title %}Meal{% endblock %}

{% block content %}
    <h1>Meal: {{ meal.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ meal.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ meal.name }}</td>
        </tr>
        <tr>
            <th>Ingredients</th>
            <td>
                <ul>
                    {% for ingredient in meal.ingredients %}
                        <li>
                            <a href="{{ path('app_ingredient_show', {'id': ingredient.id}) }}">{{ ingredient.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_meal_index') }}">back to list</a>

    <a href="{{ path('app_meal_edit', {'id': meal.id}) }}">edit</a>

    {{ include('meal/_delete_form.html.twig') }}
{% endblock %}
